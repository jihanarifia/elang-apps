{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es2017", "dom"],
    "outDir": "./dist/",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "target": "es6",
    "baseUrl": ".",
    "module": "commonjs"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "paths": {
    "react": ["./node_modules/@types/react"]
  }
}
